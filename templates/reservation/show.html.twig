{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ reservation.DateDebut ? reservation.DateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ reservation.DateFin ? reservation.DateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbNuit</th>
                <td>{{ reservation.NbNuit }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ reservation.Total }}</td>
            </tr>
            <tr>
                <th>Statue</th>
                <td>{{ reservation.Statue }}</td>
            </tr>
            <tr>
                <th>StatuePayment</th>
                <td>{{ reservation.StatuePayment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
