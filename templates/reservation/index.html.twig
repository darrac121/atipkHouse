{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>NbNuit</th>
                <th>Total</th>
                <th>Statue</th>
                <th>StatuePayment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.DateDebut ? reservation.DateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.DateFin ? reservation.DateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.NbNuit }}</td>
                <td>{{ reservation.Total }}</td>
                <td>{{ reservation.Statue }}</td>
                <td>{{ reservation.StatuePayment }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
