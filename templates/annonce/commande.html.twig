{% extends 'base.html.twig' %}

{% block title %}Reservation en attente{% endblock %}

{% block body %}
{% if app.user %}
    <h1>Reservation en attente</h1>


        {% for annonce in annonces %}
            {% if annonce.iduser == app.user %}
                {% if annonce.status == 1 %}
                    <h2>Biens : {{ annonce.titre }}</h2>
                    {{ render(controller(
                        'App\\Controller\\ReservationController::commande', {id: annonce.id }
                    )) }}
                {% endif %}
            {% endif %}
        {% endfor %}
{% endif %}
{% endblock %}
