{% extends 'base.html.twig' %}

{% block title %}categorie{% endblock %}

{% block body %}
    <h1>categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Status</th>
                <td>{% if category.status == 1 %}Activer{% else %}desactiver{% endif %}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.libelle }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-info" href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}


    <h1>Liste des champs personnalisé</h1><br>
    <a href="{{ path('app_lebelle_option_annonce_new') }}?idcategory={{ category.id }}">Cree un nouveaux champs personnalisé</a>
    {{ render(controller(
        'App\\Controller\\LebelleOptionAnnonceController::showlebelle', {id: category.id }
    )) }}
    

{% endblock %}
