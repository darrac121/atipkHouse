{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de la categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                {# <td>{{ category.id }}</td> #}
                <td>{{ category.libelle }}</td>
                {# <td>{{ category.status }}</td> #}
                <td>
                    <a class="btn btn-success" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-info" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de categorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
