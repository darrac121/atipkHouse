{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous etes connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se Deconnecter</a>
        </div>
    {% else %}

<div id="main_connection">
    <div id="info" class="text-center container">
    <div class="p-2"></div>
        <h3 class="text-center">connexion</h3>
            {# <p class="text-center">Ingrese usuario y contrase√±a</p> #}
                <div class="mb-3 p-3"><label id="lbl-usuario" class="form-label" for="username">Identifiant</label><input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="mail" autocomplete="email" required autofocus/></div>
                <div class="mb-3 p-3"><label id="lbl-password" class="form-label" for="inputPassword">Mot de passe</label><input type="password" placeholder="mot de passe" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required /></div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button id="btn-sesion" class="btn btn-success" type="submit" >Se connecter</button>
            <a href="/register" class="btn btn-primary">S'inscrire</a>
            <a href="{{ path('motdepasseoublie') }}" class="btn btn-warning"><i class="bi bi-question-circle-fill"></i> Mot de passe oublier</a>
            
    </div>
</div>
    {% endif %}


</form>
{% endblock %}
